<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Greedy Greedy</title>
    <script src="//cdnjs.cloudflare.com/ajax/libs/mobile-detect/1.3.6/mobile-detect.min.js"></script>
    <script>
        const AUTH_CODE = "{{authCode}}";
        const PORT = "{{port}}";
        const TYPE = "{{type}}";

        function createSocketAndSendCode() {
            var ws = new WebSocket("ws://localhost:" + PORT);
            ws.onopen = function (event) {
                ws.send(AUTH_CODE);
                ws.close();
            };
            ws.onerror = function (event) {
                alert("Could not communicate with Greedy Greedy.");
            };
        }

        window.onload = function () {
            var launchAnchor = document.getElementById("launchAnchor");
            if (TYPE === "desktop") {
                createSocketAndSendCode();
                if (launchAnchor) {
                    launchAnchor.href = "#";
                    launchAnchor.onclick = function (event) {
                        createSocketAndSendCode()
                    };
                }
            }
            else if (TYPE === "android") {
                var mobileDetect = new MobileDetect(window.navigator.userAgent);
                var letsReinventTheWheelIntentUrl = "intent://auth/callback?code=" + AUTH_CODE +
                        "#Intent;scheme=com.rolandoislas.greedygreedy;end";
                var intentUrl = "com.rolandoislas.greedygreedy://auth/callback?code=" + AUTH_CODE;
                if (mobileDetect.is("Chrome") && mobileDetect.version("Chrome") >= 25)
                    intentUrl = letsReinventTheWheelIntentUrl;
                window.location = intentUrl;
                if (launchAnchor)
                    launchAnchor.href = intentUrl;
            }
        };
    </script>
    <style>
        body {
            background: rgb(47, 47, 47);
        }

        .title, .button {
            margin: 0 auto;
            text-align: center;
            font-size: 100px;
            font-family: sans-serif;
        }

        .title {
            margin: 50px auto;
            color: rgb(255, 255, 255);
        }

        .button {
            width: 500px;
            height: 100px;
            background: rgb(199, 136, 17);
            color: rgb(0, 0, 0);
            margin: auto auto;
            border-radius: 10px;
            line-height: 100px;
        }

        .button:hover {
            background: rgb(170, 115, 17);
        }

        .button a {
            text-decoration: none;
            color: rgb(0, 0, 0);
        }

        .discreet {
            color: rgb(88, 88, 88);
            font-family: sans-serif;
            margin: 0 auto;
            text-align: center;
        }
    </style>
</head>
<body>
<h1 class="title">Greedy Greedy</h1>
<div class="button">
    <a id="launchAnchor">Launch</a>
</div>
<p class="discreet">If this page looks odd, it is probably the color scheme. *wink*</p>
</body>
</html>